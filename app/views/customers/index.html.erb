<div class="container">
  <div class="well">
    <%= link_to "New Customer", new_customer_path, remote: true, class: "btn btn-primary" %>
  </div>
  <div class="new-customer"></div>
  
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Company Name</th>
        <th>User Class</th>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
    </thead>
    <tbody class="customer-index">
      <%= render "index" %>
    </tbody>
  </table>
</div>
<div id="customer-modal" class="modal fade"></div>